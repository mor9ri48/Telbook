<% if @friend.errors.present? %>
  <div id="errors">
    <h3>エラーがあります。</h3>
    <ul>
      <%# 各errorメッセージの出力%>
      <% @friend.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<tr>
  <th><%= form.label :name, "名前" %></th>
  <td><%= form.text_field :name %></td>
</tr>