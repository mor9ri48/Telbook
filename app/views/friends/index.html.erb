<% @page_title = "友達一覧" %>
<h2><%= @page_title %></h2>

<div class="toolbar"><%= link_to "友達を追加する", :new_friend %></div>

<% if @friends.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>No.</th>
        <th>名前</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.id %></td>
          <td><%= link_to friend.name, [:new, friend, :telephone] %></td>
          <td>
            <%= link_to "編集", [:edit, friend] %> |
            <%= link_to "削除", friend, method: :delete,
              data: { confirm: "本当に削除しますか?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>友達の情報がありません。</p>
<% end %>